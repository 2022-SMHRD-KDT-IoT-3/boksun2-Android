<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Boksun3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sDark</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--장애인용 테마 -->
    <style name="Theme.handi" parent="Theme.AppCompat.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sDark</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--@@@@@@@@@@@@@@@@@@@@ 수정 @@@@@@@@@@@@@@@@@@@@@@@@@-->
        <!--android:windowBackground:배경색-->
        <item name="android:windowBackground">@color/black</item>

        <!--textColor: button글씨/ editTextColor:에딧텍스트글씨색-->
        <item name="android:editTextColor">#ffffff</item>

        <!--android:textColor(전체텍스트컬러)-->
        <item name="android:textColor">#ffffff</item>

        <!--colorPrimaryVariant:상단바-->
        <item name="colorPrimaryVariant">@color/black</item>

        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

<!--  admin용 테마 admin에 적용할것들은 여기서 수정해주세요 부모에서 수정하면 다 바껴요..   -->
    <style name="Theme.admin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sDark</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="PopupTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sDark</item>
        <item name="colorSecondaryVariant">@color/sDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.Boksun3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="Theme.Boksun3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Boksun3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />






    <style name="HandiTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryVariant">#FFC107</item>
        <item name="colorOnPrimary">#FFC107</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">#FFC107</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>



    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- 스플래시 테마  -->
<style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/pbok</item>
    <item name="android:windowFullscreen">true</item>
</style>

</resources>