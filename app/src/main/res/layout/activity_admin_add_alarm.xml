<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminAddAlarm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

        <Button
            android:id="@+id/btn_add2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btn_ground_gray"
            android:fontFamily="@font/nanumbarunpenb"
            android:gravity="center"
            android:text="알람추가"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ck_alarm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/checkbox_custom"
                android:button="@android:color/transparent"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanumbarunpenb"
                android:gravity="end"
                android:text="7 : 30"
                android:textColor="@color/black"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/tv_ampm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenb"
                android:text=" 오전"
                android:textColor="@color/black"
                android:textSize="27dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/alarm_set"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onclick"
                app:srcCompat="@drawable/ic_settings_secondary" />

        </LinearLayout>

        <View style="@style/Divider" />


    </LinearLayout>


</ScrollView>