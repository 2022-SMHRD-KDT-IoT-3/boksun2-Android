<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10sp"
    android:background="#000000"
    tools:context=".handiMedResister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_volume" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="230dp"
                android:layout_height="59dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="50sp"
                android:gravity="center"
                android:text="약 정보 등록"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="180dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/med" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_med_name"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/handi_border_black"
            android:drawableTop="@drawable/ic_baseline_local_hospital_24"
            android:text="약 이름"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_med_name"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30sp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_custom"
            android:ems="10"
            android:gravity="center"
            android:hint="약 이름"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_alarm"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/handi_border_black"
            android:drawableTop="@drawable/ic_baseline_alarm_add_24"
            android:text="알람설정"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_alarm"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30sp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_custom"
            android:ems="10"
            android:gravity="center"
            android:hint="알람 시간"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_etc"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/handi_border_black"
            android:drawableTop="@drawable/ic_baseline_format_list_bulleted_24"
            android:text="기타사항"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_resister"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50sp"
            android:layout_weight="1"
            android:background="@drawable/handi_border_yellow"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>