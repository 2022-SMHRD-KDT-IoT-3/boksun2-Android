<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminCall">


    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="비상연락"
        android:textColor="#E31515"

        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="김민정"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35sp"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:text="상세 주소 :  "
            android:textColor="#707070"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="광주 동구 대인동 5"
            android:textColor="#707070"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_hos"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35sp"
            app:srcCompat="@drawable/hospital" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:text="질병 사항 :   "
            android:textColor="#707070"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="고혈압"
            android:textColor="#707070"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_clock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="35sp"
            app:srcCompat="@drawable/clock2" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif"
            android:text="최근 활동 시간 : "
            android:textColor="#707070"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text=" 2022-05-27                오후 4:45"
            android:textColor="#707070"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:text="긴급상황시, 버튼을 눌러주세요."
            android:textColor="#303345" />

        <ImageButton
            android:id="@+id/btn_sos"
            android:layout_width="176dp"
            android:layout_height="150dp"
            android:layout_marginLeft="120dp"

            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sos" />
    </LinearLayout>

</LinearLayout>