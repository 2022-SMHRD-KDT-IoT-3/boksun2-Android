<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminJoin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13sp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="아이디"
            android:fontFamily="@font/nanumbarunpenb"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_id"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint=" 예 : boksun2"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_idCheck"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/gr_btn"
                android:text="중복확인"
                android:fontFamily="@font/nanumbarunpenb"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_pw"
            android:layout_width="370dp"
            android:layout_height="46dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"

            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint=" 비밀번호를 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_pw2"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"

            android:layout_marginBottom="50sp"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint=" 비밀번호를 한번 더 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint=" 이름을 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint=" 전화번호를 입력해주세요."
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="복지사 면허번호
"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_license"
            android:layout_width="370dp"
            android:layout_height="50sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/border"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:gravity="center|left"
            android:hint=" 면허번호를 입력해주세요."
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="소속 복지관 명"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_com"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint=" 복지관 명을 입력해주세요."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="복지관 전화번호"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_comTel"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint=" 복지관 전화번호를 입력해주세요."
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="관할 주소지"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="173dp"
                android:layout_height="33dp"
                android:layout_marginStart="17dp"
                android:entries="@array/city"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:layout_marginStart="15dp"
                android:entries="@array/seoul"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/spinner1"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:entries="@array/gwangju"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="370sp"
            android:layout_height="50sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:fontFamily="@font/nanumbarunpenb"
            android:gravity="center|left"
            android:text=" "
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ground_gray"
                android:text="취소"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumbarunpenb"/>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:background="@drawable/btn_round"
                android:text="등록"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumbarunpenb"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>