<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:contentDescription="테스트"
    android:orientation="vertical"
    tools:context=".handiBox">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_volume" />

        <TextView
            android:id="@+id/tv_handi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="OOO"
            android:textAlignment="textEnd"
            android:textColor="#59ADE6"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="님의 약보관함"

            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/h_b_1"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />

        <Button
            android:id="@+id/h_b_2"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />

        <Button
            android:id="@+id/h_b_3"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/h_b_4"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />

        <Button
            android:id="@+id/h_b_5"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />

        <Button
            android:id="@+id/h_b_6"
            android:layout_width="wrap_content"
            android:layout_height="120sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/h_b_7"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@drawable/handi_more_black"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="상비약"
            android:textColor="#FFFFFF"
            android:textSize="55sp" />
    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_marginBottom="30sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:background="@drawable/handi_border_yellow"
        android:fontFamily="@font/nanumbarunpenr"
        android:text="로그아웃"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

</LinearLayout>