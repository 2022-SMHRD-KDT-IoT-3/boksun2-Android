<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F1EB"
    android:orientation="vertical"
    tools:context=".adminBox">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="000"
                android:textAlignment="textEnd"
                android:textColor="@color/secondary"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="님의 보관함"

                android:textSize="35sp" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_box1"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btn_box2"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btn_box3"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_box4"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btn_box5"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />

            <Button
                android:id="@+id/btn_box6"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginRight="20sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_box7"
                android:layout_width="wrap_content"
                android:layout_height="90sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:background="@drawable/btn_lightgray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="상비약"
                android:textColor="#FFFFFF"
                android:textSize="55sp" />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="30sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/btn_lightgray" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="선택가능"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:background="@drawable/btn_round" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="사용중"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>