<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".adminJoin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13sp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="아이디"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_id"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint=" 예 : boksun2"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button8"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/gr_btn"
                android:text="중복확인"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_pw"
            android:layout_width="370dp"
            android:layout_height="46dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"

            android:ems="10"
            android:hint=" 비밀번호를 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_pw2"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"

            android:layout_marginBottom="50sp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" 비밀번호를 한번 더 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" 이름을 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" 전화번호를 입력해주세요."
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="생년월일"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/edt_date"
            android:layout_width="370dp"
            android:layout_height="50sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center|left"
            android:hint="생년월일을 입력해주세요."
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="성별"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_m"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:text="남" />

            <RadioButton
                android:id="@+id/rb_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="여" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:text="주소"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="250dp"
                android:layout_height="50sp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/border"
                android:ems="10"
                android:hint=" 주소를 입력해주세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_address"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:background="@drawable/gr_btn"
                android:text="주소 찾기"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName12"
            android:layout_width="370dp"
            android:layout_height="50sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" 상세주소"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:text="복지관 명"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextTextPersonName13"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:hint=" 복지관 명을 입력해주세요."
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:text="복지관 전화번호"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextTextPersonName14"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="복지관 전화번호를 입력해주세요."
                android:inputType="phone"  />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                android:text="복지관 면허번호"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTextTextPersonName15"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="100sp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="복지관 면허번호를 입력해주세요."
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ground_gray"
                android:text="취소"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button12"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:background="@drawable/btn_round"
                android:text="등록"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>