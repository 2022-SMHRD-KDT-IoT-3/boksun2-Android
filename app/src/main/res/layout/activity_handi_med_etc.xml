<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".handiMedEtc">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_med_sound"
                android:layout_width="70dp"
                android:layout_height="71dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sound" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="50sp"
                android:gravity="center"
                android:text="기타사항"
                android:textColor="#3E3E3E"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_hospital"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/more_gr_gray"
            android:drawableTop="@drawable/ic_baseline_local_hospital_24"
            android:paddingTop="5sp"
            android:text="처방 의료기관"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_hospital"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:hint="처방 의료기관"
            android:inputType="textPersonName"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_way"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/more_gr_gray"
            android:drawableTop="@drawable/ic_baseline_content_paste_24"
            android:paddingTop="5sp"
            android:text="복용 방법"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_med_way"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:hint="복용 방법"
            android:inputType="textPersonName"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_count"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/more_gr_gray"
            android:drawableTop="@drawable/ic_alarm_on"
            android:paddingTop="5sp"
            android:text="복용 횟수"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_med_count"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:hint="복용 횟수"
            android:inputType="numberSigned"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_date"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/more_gr_gray"
            android:drawableTop="@drawable/ic_calendar"
            android:paddingTop="5sp"
            android:text="처방 일자"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_med_date"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:hint="처방 일자"
            android:inputType="date"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_memo"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/more_gr_gray"
            android:drawableTop="@drawable/ic_bubble_outline"
            android:paddingTop="5sp"
            android:text="메모"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/edt_memo"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/border"
            android:ems="10"
            android:gravity="center"
            android:hint="메모"
            android:inputType="textPersonName"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_med_ok"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/more_gr_btn"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>