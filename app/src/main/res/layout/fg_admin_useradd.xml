<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="400dp"


        android:layout_marginLeft="5sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:gravity="center"
            android:text="회원 등록"
            android:textColor="#282828"
            android:textColorHint="#212121"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:text="시리얼 번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_seri"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="  시리얼 번호"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="이름"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_handi_name"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="  이름을 입력해주세요."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="생년월일"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_handi_date"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="  생년월일을 입력해주세요."
            android:inputType="date" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="성별"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="남" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="여" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="주소"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_handi_ad"
                android:layout_width="250sp"
                android:layout_height="50dp"
                android:layout_marginLeft="15sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/border_white"
                android:ems="10"
                android:fontFamily="@font/nanumbarunpenb"
                android:hint="  주소를 입력해주세요."
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:background="@drawable/more_gr_gray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="주소 찾기"
                android:textColor="#FFFFFF"
                android:textSize="21sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="전화번호"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_handi_phone"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="  전화번호를 입력해주세요."
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:fontFamily="@font/nanumbarunpenb"
            android:text="비상 연락처"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_handi_emer"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="20sp"
            android:layout_weight="1"
            android:background="@drawable/border_white"
            android:ems="10"
            android:fontFamily="@font/nanumbarunpenb"
            android:hint="  비상 연락처를 입력해주세요."
            android:inputType="phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button8"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:background="@drawable/more_gr_gray"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="취소"
                android:textSize="21sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:background="@drawable/more_gr_btn"
                android:fontFamily="@font/nanumbarunpenb"
                android:text="등록"
                android:textSize="21sp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>