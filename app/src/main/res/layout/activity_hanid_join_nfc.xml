<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hanidJoinNFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:text="시리얼 번호"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_serialJoin"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/handi_border_black"
            android:fontFamily="sans-serif"
            android:gravity="center|left"
            android:hint="  시리얼 번호 입력창"
            android:textColorHint="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:text="이름"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edt_user_name"
            android:layout_width="380dp"
            android:layout_height="75dp"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/handi_border_black"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="  이름을 입력해주세요."
            android:inputType="textPersonName"
            android:textColorHint="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif"
            android:text="비상 연락처"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/edt_user_emer"
            android:layout_width="380dp"
            android:layout_height="75dp"
            android:layout_marginLeft="13sp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/handi_border_black"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="  비상 연락처를 입력해주세요."
            android:inputType="phone"
            android:textColorHint="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_handiNfcJoin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/handi_border_yellow"
            android:fontFamily="sans-serif"
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View style="@style/Divider" />


    </LinearLayout>


</ScrollView>